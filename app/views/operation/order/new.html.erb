<h3>Nouveau retrait</h3>
<%=form_tag :action=>'create' do%>

<table>
	<tr>
		<td><label for="ord_item_name">Article :</label></td><td><%=collection_select(:order, :item_id, @items, :id, :name)%></td>
	</tr>
	
	<tr>
		<td><label for="ord_quantity">Quantit√© :</label></td><td><%=text_field 'order','quantity'%></td>
	</tr>
	
	<tr>
		<td><label for="ord_price_unit">Demandeur :</label></td><td><%=collection_select(:order, :customer_id, @customers, :id, :names)%></td>
	</tr>
	
	<tr>
		<td><label for="ord_customer">Date :</label></td><td><%=date_select 'order', 'date'%></td>
	</tr>
	
	<tr>
		<td><%=submit_tag "Ajouter"%></td>
	</tr>
</table>
<%end%>
<%=link_to 'Retour', :action=>'index'%>