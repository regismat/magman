<h2>Compte d'utilisateurs à valider</h2>
<table>
	<thead>
		<tr>
			<td>Nom d'utilisateur</td>
			<td>Proprietaire</td>
			<td>Niveau d'accès</td>
			<td>Operations</td>
		</tr>
		
	</thead>
	
	<tbody>
		<%@users.each do |u|%>
		<tr>
			<td><%=u.username%></td>
			<%if u.customer%>
			<td><%=link_to u.customer.names,{:controller=>'admin/customer',:action=>:show,:id=>u.customer_id}%></td>
			<%else%>
			<td>(à presiser)</td>
			<%end%>
		
			<td><%if u.role%>
			<%=u.role.title%>
			<%else%>
			(à presiser)
			<%end%></td>
			<td><%=link_to 'Mot de passe',users_edit_path(:id=>u),class:'editButton'%>
				<%=link_to "Propriétaire/niveau d'accès",users_access_edit_path(:id=>u),class:'editButton'%></td>
		</tr>
	<%end%>	
	</tbody>
	
	
</table>
<%=link_to "Retour", users_list_path(),class:'link'%>  