<h1>Nouvel agent</h1>
<%=form_tag :action=>'create' do%>

<table>
	<tr>
		<td><label for="customer_names">Noms :</label></td><td><%=text_field 'customer','names'%></td>
	</tr>
	
	<tr>
		<td><label for="customer_service">Service :</label></td>
		<td><%= collection_select(:customer, :department_id, @departments, :id, :description)%></td>
	</tr>
	
	<tr>
		<td><label for="customer_telephone">Téléphone :</label></td><td><%=text_field 'customer','telephone'%></td>
	</tr>
	<tr>
		<td><label for="customer_email">E-mail :</label></td><td><%=text_field 'customer','email'%></td>
	</tr>
	<tr>
		<td><%=submit_tag "Ajouter"%></td>
	</tr>
</table>
<%end%>
<%=link_to 'Retour', :action=>'index'%>