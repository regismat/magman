<h3>Nouveau fournisseur</h3>
<%= form_tag :action=>'create' do%>

<table>
	<tr>
		<td><label for="provider_names">Noms</label></td><td>: <%=text_field 'provider','names'%></td>
	</tr>
	
	<tr>
		<td><label for="provider_town">Ville</label></td>
		<td>: <%=text_field 'provider', 'town'%></td>
	</tr>
	
	<tr>
		<td><label for="provider_telephone">Téléphone</label></td><td>: <%=text_field 'provider','telephone'%></td>
	</tr>
	<tr>
		<td><label for="provider_email">E-mail</label></td><td>: <%=text_field 'provider','email'%></td>
	</tr>
	<tr>
		<td><%=submit_tag "Ajouter"%></td>
	</tr>
</table>
<%end%>
<%=link_to 'Retour', :action=>'index'%>